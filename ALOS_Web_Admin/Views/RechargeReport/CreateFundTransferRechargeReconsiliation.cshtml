@using Microsoft.CodeAnalysis
@using ALOS_Web_Admin.Helpers
@{
    ViewData["Title"] = "Dashboard";
}
<!-- DataTables -->
<link rel="stylesheet" href="/Admin/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="/Admin/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
<link rel="stylesheet" href="/Admin/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="row">
                <div class="col-sm-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Fund Transfer</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form method="post" action="@Url.Action("CreateFundTransferRechargeReconsiliation","RechargeReport")">
                            <div class="card-body">
                                @if (ViewContext.ViewData.ModelState.ContainsKey("User"))
                                {
                                    <div class="alert alert-danger alert-dismissible fade show">
                                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                                        <strong>@Html.ValidationMessage("User", "", new { @class = "text-default" })</strong>
                                    </div>
                                }
                                @if (ViewBag.Message != null)
                                {
                                    <div class="alert alert-success alert-dismissible fade show">
                                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                                        <strong>@ViewBag.Message</strong>
                                    </div>
                                }
                                <div class="form-group col-sm-3 float-left">
                                    <div class="col">
                                        <label>Member</label>
                                        <select name="member" id="member" class="form-control js-example-basic-single">
                                            @foreach (var member in ViewBag.Users)
                                            {
                                                <option value="@member.Id">@member.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group col-sm-3 float-left">
                                    <div class="col">
                                        <label for="">From Date</label>
                                        <input type="date" class="form-control" name="start_date">
                                    </div>
                                </div>
                                <div class="form-group col-sm-3 float-left">
                                  
                                    <div class="col">
                                        <label for="">To Date</label>
                                        <input type="date" class="form-control" name="end_date">
                                    </div>
                                </div>


                                <div class="form-group col-sm-3 float-left">
                                    <div class="col">
                                        <label>Action</label>
                                        <button type="submit" id="submit" class="btn btn-primary" style="width: 100%">Search</button>
                                    </div>


                                </div>
                            </div>


                        </form>

                        @if (ViewBag.Remiser != null)
                        {

                            <div class="card">
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table id="example1" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Txn Date</th>
                                                <th>Recharge Id</th>
                                                <th>Mobile No</th>
                                                <th>Type</th>
                                                <th>Opening Balance</th>
                                                <th>Amount</th>
                                                <th>Closing Balance</th>
                                                <th>TXN Type</th>
                                                <th>Remarks</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var rem in ViewBag.Remiser)
                                            {
                                                <tr>
                                                    <td>@ViewBag.UserName</td>
                                                    <td>@rem.CreatedAt</td>
                                                    <td>@rem.TrnNo</td>
                                                    <td>@ViewBag.Mobile</td>
                                                    <td>@rem.Type</td>
                                                    <td>@rem.OpeningBalance</td>
                                                    <td>@rem.Amount</td>
                                                    <td>@rem.ClosingBalance</td>
                                                    <td>@rem.Module</td>
                                                    <td>@rem.Remark</td>
                                                    @*<td>@trans.action</td>*@
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                        }
                    </div>

                </div>


                <!-- /.row -->
                <!-- Main row -->
                <!-- /.row (main row) -->
            </div><!-- /.container-fluid -->
        </div>
    </section>
    <!-- /.content -->
</div>

@section dataTableScripts
{
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            var select2 = $(".js-example-basic-single").select2();
            select2.data('select2').$selection.css('height', '39px');
        });
    </script>
    <!-- Bootstrap 4 -->
    <script src="/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables  & Plugins -->
    <script src="/Admin/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/Admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="/Admin/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="/Admin/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="/Admin/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="/Admin/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="/Admin/plugins/jszip/jszip.min.js"></script>
    <script src="/Admin/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="/Admin/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="/Admin/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="/Admin/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="/Admin/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap-switch-button@1.1.0/dist/bootstrap-switch-button.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/Admin/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="/Admin/dist/js/demo.js"></script>
    <!-- Page specific script -->
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
        function deleteConfirm() {
            var message = confirm('Are sure to delete member ?');
            if (message) {
                return true;
            } else {
                return false;
            }
        }
    </script>
}